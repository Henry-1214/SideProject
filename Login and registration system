#include<iostream>
#include<cstdlib>
#include<fstream>
using namespace std;

#define mottohayaku ios::sync_with_stdio(0),cin.tie(0),cout.tie(0)
#define endl '\n'
#define GrantAccess 0
#define WrongUsername 2
#define WrongPassword 3

ifstream in;
ofstream out;

int SignIn();
void Registration();

int main(){
    int choice;
    cout << "==(1).Login==" << endl << "==(2).Register==" << endl << "-->Choice:";cin >> choice;
    while(choice != 1 && choice != 2){
        cout << "Please enter RULED option." << endl;
        cout << "==(1).Login==" << endl << "==(2).Register==" << endl << "-->Choice:";cin >> choice;
    }
    if(choice == 1){
        SignIn();

    }
    else if(choice == 2){
        cout << "=====================" << endl << "Registration:" << endl <<"---------------------" << endl;
        Registration();
int option;
        cout << "=====Registration Completed!!!=====" << endl << endl << "==(1).Login==" << endl << "==(2).Exit=="<<endl<<endl<< "-->Choice:";cin >> option;

        if(option == 1){
            SignIn();
        }else exit(1);

    }
}

int SignIn(){
    cout << "=====================" << endl << "Login:" << endl << "---------------------" << endl;
    in.open("C:\\Users\\user\\Desktop\\data.txt");
    string username, password, un, pa;
    in >> un >> pa;

    cout << "-->Username:";cin >> username;
    cout << endl << "-->Password:";cin >> password;

    if(username == un && password == pa){
        cout << "=====GrantAccess!!!====="<<endl;
        return GrantAccess;
    }
    else if(username != un){

        cout << "=====User does NOT exist.=====" << endl << endl;
        return WrongUsername;

    }
    else if(username == un && password != pa){

        cout << "=====WrongPassword.=====" << endl << endl;
        int chance = 2;
        while(password != pa){
            cout << "===Please try again.===" << endl << chance << " chance less" << endl << "-->Password:";cin >> password;
            if(password == pa){
                cout << "=====GrantAccess!!!====="<<endl;
                return GrantAccess;
            }
            else{
                chance--;
                if(!chance){
                    cout << "===Two attempts had been tried.===" << endl;
                    break;
                }
            }
        }
        return WrongPassword;
    }
    in.close();
}

void Registration(){
    out.open("C:\\Users\\user\\Desktop\\data.txt");
    string un, pa;
    cout << "-->Username:";cin >> un;
    cout << endl << "-->Password:";cin >> pa;
    out << un << endl << pa;
    out.close();
}
